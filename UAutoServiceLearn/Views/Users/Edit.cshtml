@model UAutoServiceLearn.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Edit user</h2>
<br />

<div class="form-border">
    <form asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="FirstName" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="FirstName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="LastName" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="LastName" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Email" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Email" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="PhoneNumber" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Address" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Address" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="City" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="City" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="PostalCode" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PostalCode" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-sm btn-primary" value="Update" />
            <a class="btn btn-sm btn-success" asp-action="Index">Back</a>
        </div>
    </form>

</div>


