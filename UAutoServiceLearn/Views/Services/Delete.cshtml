@model UAutoServiceLearn.Models.Service
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete a service</h2>
<br />

<div class="form-border">
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CarId" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="ServiceType.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="ServiceType.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Miles" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Miles" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Details" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Details" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Price" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" disabled class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-sm btn-danger" value="Delete" />
            <a class="btn btn-sm btn-success" asp-action="Create" asp-route-carId="@Model.CarId">Back</a>
        </div>
    </form>
</div>

